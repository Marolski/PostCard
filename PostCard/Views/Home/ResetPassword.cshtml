@model PostCard.Models.UserViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/Register/Register.js"></script>
    <link rel="stylesheet" href="~/Content/Register/Register.css">
    <title>RegisterForm</title>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Logowanie</h4></div>
        <div class="panel-body">
            @if (ViewBag.ShowAlert)
            {
                <script>alert("Hasło zresetowane, sprawdź maila");</script>
            }
            @using (Html.BeginForm("Reset", "Login"))
            {
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label>Email </label>
                    @Html.TextBox("email")
                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                </div>

                <div class="text-center">
                    <input id="submit" class="btn btn-success submit" type="submit" value="Resetuj hasło" />
                </div>
            }
        </div>
    </div>
</body>

<style type="text/css">
    .field-validation-error {
        color: #ff0000;
        display: block;
    }
</style>

</html>
